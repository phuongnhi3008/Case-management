@{
    ViewBag.Title = "MauDon";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

@model PagedList.IPagedList<NienLuan2.Models.MAUDON>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    int count = 1;
}
<div class="container-fluid">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            DANH SÁCH MẪU ĐƠN
            <div class="footer" style="background: #fff">
                <div class="table-responsive">
                    <table class="table table-hover table-light">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên mẫu đơn</th>
                                <th scope="col">Tải về</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                        @{
                                            count++;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenMauDon)
                                    </td>
                                    <td>
                                        @*<button class="item btn btn-success btn-sm" onclick="DownloadDon('@item.Link_MD')">
                                            Download
                                        </button>*@   
                                        <a href="@item.Link_MD">
                                            <i class="fa download">Download</i>
                                        </a> 
                                        @*<button class="item btn btn-success btn-sm" onclick="DownloadDon('@item.MA_MauDon')">
                                            Download
                                        </button>*@                                       
                                    </td>
                                </tr>
                                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("MauDon", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>


            </div>
        </div>
    </div>
